{
    "source":
    {
        "include": [
            "./build/",
            "./node_modules/cypher-tools/build/index.js",
            "./node_modules/neo4j-parser/build/index.js",
            "./node_modules/neo4j-query-object/build/index.js"
        ],
        "includePattern": ".+\\.js(doc)?$"
    },

    "plugins": [
        "plugins/markdown"
    ],

    "opts":
    {

        "destination": "./docs/",
        "recurse": true,
        "template": "templates/default",
        "access": "all",
        "private": true,
        "readme": "./README.md",
        "tutorials": "./tutorials/"
    },

    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },

    "tags":
    {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    }
}
